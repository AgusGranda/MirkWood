<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>

    <link rel="stylesheet" href="/css/productForm.css">
    <title>Formulario de productos</title>
</head>
<body>
    
 <%- include('partials/header') %>

        <main>

            <div class="form_container">
                <form class="form" action="/productForm" method="POST">

                    <label for="name">Nombre del producto: </label>
                    <input type="text" name="name" id="name">

                    <label for="price">Precio del producto: </label>
                    <input type="number" name="price" id="price">

                    <label for="discount">Descuento%:</label>
                    <input type="number" name="discount" id="discount">

                    <label for="category">Categoria</label>
                    <select name="category" id="category">
                        <option value="">Seleccione una categoria</option>
                        <option value="ant">Ant</option>
                        <option value="nest">Nest</option>
                    </select>
                    <label for="class">Clase</label>
                    <select name="class" id="class">
                        <option value="">Seleccione una Clase</option>
                        <option value="Camponotus">Camponotus</option>
                        <option value="Pseudomirmex">Pseudomirmex</option>
                        <option value="Crematogaster">Crematogaster</option>
                    </select>

                    <label for="description">Descripcion</label>
                    <textarea name="description" id="description" ></textarea>

                    <input type="file" name="image" id="image">

                    <button type="submit">Cargar Producto</button>

                </form>
            </div>

          
        </main>

<%- include('partials/footer') %>